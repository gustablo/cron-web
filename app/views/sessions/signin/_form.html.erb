<%= form_with(model: @user, url: sessions_authenticate_path, method: :post, class: "space-y-4") do |f| %>
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, value: @email_query, autocomplete: 'off', class: "mt-1 p-2 w-full border rounded-md focus:border-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-300 transition-colors duration-300" %>
  </div>
  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, class: "mt-1 p-2 w-full border rounded-md focus:border-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-300 transition-colors duration-300" %>
  </div>
  <div>
    <%= f.submit "Sign In", class: "w-full bg-cyan-600 focus:bg-cyan-600 text-white p-2 rounded-md focus:outline-none cursor-pointer" %>
  </div> 
<% end %>
